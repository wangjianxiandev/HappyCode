<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.redant.codeland.ui.EnlightenActivityNew"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/coding_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/coding_test_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mResultText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:lines="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fadeScrollbars="false"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:background="@drawable/module_fillet_black"
            android:alpha="0.7"/>

    </LinearLayout>


    <WebView
        android:id="@+id/code_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.redant.codeland.MyButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/icon_back"
        android:id="@+id/button_back_coding"/>

</LinearLayout>
